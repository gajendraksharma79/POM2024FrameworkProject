<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Opencart App Test Regression Suite" verbose="3" parallel="tests" thread-count="4"  > <!-- Verbose define the log information on console from tes
testng side. it's value can be min. 1 and max =10. More verbose level more the information will be displayed i
in console. Normally we should pick 3 or 4
 -->


	<test name="Login Page Test _ chrome">
	<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />

		</classes>
	</test>
	
	<test name="Accounts Page Test">
	<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest" />
		</classes>
	</test>

	<test name="Product Info Page Test">
	<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoPageTest" />
		</classes>
	</test>
	
	<test name="User Registration Page Test">
	<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.RegistrationPageTest" />
		</classes>
	</test>
	
	
</suite>