<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Opencart App Test Regression Suite" verbose="3"
	parallel="tests" thread-count="4"> <!-- Verbose define the log information on console from testng side. 
		it's value can be min. 1 and max =10. More verbose level more the information 
		will be displayed i in console. Normally we should pick 3 or 4 -->
	<listeners>
		<listener
			class-name="com.qa.opencart.listeners.ExtentReportListener" />
		<listener
			class-name="com.qa.opencart.listeners.TestAllureListener" />
		<listener
			class-name="com.qa.opencart.listeners.AnnotationTransformer" />

	</listeners>

	<test name="Login Page Test _ chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />

		</classes>
	</test>



